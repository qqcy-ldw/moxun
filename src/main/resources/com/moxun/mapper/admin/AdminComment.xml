<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.moxun.mapper.admin.AdminCommentMapper">

    <select id="pageListComments" resultType="com.moxun.Pojo.Entity.CourseComment">
        select id, course_id, user_id, content, rating, create_time, update_time
        from course_comments
        <where>
            <if test="courseId != null">
                and course_id = #{courseId}
            </if>
            <if test="rating != null">
                and rating = #{rating}
            </if>
        </where>
    </select>
</mapper>